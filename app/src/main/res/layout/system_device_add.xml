<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_device_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="Name" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:text="Capacity" />

        <EditText
            android:id="@+id/capacity_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:ems="8"
            android:inputType="number"
            android:text="11" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="Type" />

        <RadioGroup
            android:id="@+id/device_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp">

            <RadioButton
                android:id="@+id/type_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Mobile Phone (11Wh)" />

            <RadioButton
                android:id="@+id/type_ebike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="eBike (3600Wh)" />

            <RadioButton
                android:id="@+id/type_ecar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="eCar (24000Wh)" />

            <RadioButton
                android:id="@+id/type_household"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="household (30Wh)" />

            <RadioButton
                android:id="@+id/type_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="other" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>

